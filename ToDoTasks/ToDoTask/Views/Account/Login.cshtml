@using System.Linq
@using Entities
@using ToDoTask.Models.AccountViewModels
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<environment include="Development">
    <link rel="stylesheet" href="~/css/Login.css" />
</environment>

<div class="container">
    <div class="modal fade" id="loginModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <p class="modal-title mx-auto mw-100">
                        <strong>Login using</strong>
                    </p>
                </div>
                <div class="modal-body mx-auto">
                    <div class="container-fluid">
                        <div class="row">
                            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group row">
                                    <label class="col-4 col-md-4 col-form-label" asp-for="Email">E-mail</label>
                                    <div class="col-8 col-md-8 ml-auto">
                                        <input type="email" class="form-control" asp-for="Email" placeholder="explore@books.com"/>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-4 col-md-4 col-form-label" asp-for="Password"></label>
                                    <div class="col-8 col-md-8 ml-auto">
                                        <input asp-for="Password" class="form-control"/>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-check">
                                        <label class="form-check-label col-form-label" asp-for="RememberMe">
                                            <input type="checkbox" asp-for="RememberMe"/>
                                            @Html.DisplayNameFor(m => m.RememberMe)
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-login">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="container-fluid">
                        <div class="row text-center">
                            <div class="col-md col">
                                <strong>
                                    <a class="footer" @*asp-action="ForgotPassword"*@>Forgot password *Not yet*</a>
                                </strong>
                            </div>
                            <div class="col-md col">
                                <strong>
                                    <a class="footer" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register here</a>
                                </strong>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/Login.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
